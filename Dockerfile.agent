# Dockerfile for the Agentic Task Agent
# Runs the polling agent that processes tasks via Claude Code CLI

FROM node:22-slim

# Install required system dependencies
RUN apt-get update && apt-get install -y \
    git \
    curl \
    ca-certificates \
    gnupg \
    dos2unix \
    gosu \
    && rm -rf /var/lib/apt/lists/*

# Install GitHub CLI
RUN curl -fsSL https://cli.github.com/packages/githubcli-archive-keyring.gpg | dd of=/usr/share/keyrings/githubcli-archive-keyring.gpg \
    && chmod go+r /usr/share/keyrings/githubcli-archive-keyring.gpg \
    && echo "deb [arch=$(dpkg --print-architecture) signed-by=/usr/share/keyrings/githubcli-archive-keyring.gpg] https://cli.github.com/packages stable main" | tee /etc/apt/sources.list.d/github-cli.list > /dev/null \
    && apt-get update \
    && apt-get install -y gh \
    && rm -rf /var/lib/apt/lists/*

# Install Claude Code CLI globally
RUN npm install -g @anthropic-ai/claude-code

# Create non-root user for security (Claude Code requires non-root)
RUN useradd -m -s /bin/bash agent

# Create app directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci --include=dev

# Copy source code
COPY . .

# Create workspace directory for target repos
RUN mkdir -p /workspace && chown -R agent:agent /workspace

# Copy startup scripts and fix line endings (Windows CRLF -> Unix LF)
COPY scripts/start-agent.sh /start-agent.sh
COPY scripts/init-agent.sh /init-agent.sh
RUN dos2unix /start-agent.sh /init-agent.sh && chmod +x /start-agent.sh /init-agent.sh

# Give agent user ownership of app directory
RUN chown -R agent:agent /app

# Set default environment variables
ENV NODE_ENV=production
ENV AGENT_WORKING_DIR=/workspace/repo
ENV AGENT_POLL_INTERVAL=30000
ENV HOME=/home/agent
ENV USER=agent

# Run init script as root (fixes permissions, then switches to agent user)
CMD ["/init-agent.sh"]
